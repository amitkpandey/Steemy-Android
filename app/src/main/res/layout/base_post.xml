<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:elevation="5dp"
    card_view:cardCornerRadius="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <io.steemapp.steemy.views.SteemyTextView
            android:id="@+id/discussion_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typeface="SourceSansPro-Semiboldlt.otf"
            android:textSize="20sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/medGray"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginBottom="12dp"
            />

        <io.steemapp.steemy.views.SteemyTextView
            android:id="@+id/discussion_teaser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typeface="SourceSansPro-Regular.otf"
            android:textSize="14sp"
            android:textColor="@color/medGray"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"/>

        <include layout="@layout/post_metadata_layout"/>
    </LinearLayout>
</android.support.v7.widget.CardView>