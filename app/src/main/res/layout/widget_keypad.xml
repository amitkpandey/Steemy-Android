<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ViewFlipper
        android:id="@+id/amount_flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <io.steemapp.steemy.views.SteemyTextView
        android:id="@+id/empty_amount"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="72sp"
        android:text="$0"
        android:textColor="@color/colorPrimaryDark"
        app:typeface="SourceSansPro-Semibold.otf"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <io.steemapp.steemy.views.SteemyTextView
        android:id="@+id/transfer_amount"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="72sp"
        android:textColor="@color/colorPrimaryDark"
        app:typeface="SourceSansPro-Semibold.otf"
        android:layout_gravity="center"
        android:gravity="center"
        />

    </ViewFlipper>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal">
            <io.steemapp.steemy.views.SteemyButton
                android:id="@+id/stm_button"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="50sp"
                android:text="STM"
                android:textColor="@android:color/white"
                app:typeface="SourceSansPro-Semibold.otf"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button_color_primary_stroke"
                />

            <io.steemapp.steemy.views.SteemyButton
                android:id="@+id/sbd_button"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="50sp"
                android:text="SBD"
                android:textColor="@color/colorPrimaryDark"
                app:typeface="SourceSansPro-Semibold.otf"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@null"
                />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <io.steemapp.steemy.views.SteemyButton
            android:id="@+id/key_pad_seven"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/button_color_primary_stroke"
            android:textColor="@android:color/white"
            android:text="7"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:typeface="SourceSansPro-Regular.otf"/>

        <io.steemapp.steemy.views.SteemyButton
            android:id="@+id/key_pad_eight"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/button_color_primary_stroke"
            android:textColor="@android:color/white"
            android:text="8"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:typeface="SourceSansPro-Regular.otf"/>

        <io.steemapp.steemy.views.SteemyButton
            android:id="@+id/key_pad_nine"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/button_color_primary_stroke"
            android:textColor="@android:color/white"
            android:text="9"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:typeface="SourceSansPro-Regular.otf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <io.steemapp.steemy.views.SteemyButton
            android:id="@+id/key_pad_four"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/button_color_primary_stroke"
            android:textColor="@android:color/white"
            android:text="4"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:typeface="SourceSansPro-Regular.otf"/>

        <io.steemapp.steemy.views.SteemyButton
            android:id="@+id/key_pad_five"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/button_color_primary_stroke"
            android:textColor="@android:color/white"
            android:text="5"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:typeface="SourceSansPro-Regular.otf"/>

        <io.steemapp.steemy.views.SteemyButton
            android:id="@+id/key_pad_six"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/button_color_primary_stroke"
            android:textColor="@android:color/white"
            android:text="6"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:typeface="SourceSansPro-Regular.otf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <io.steemapp.steemy.views.SteemyButton
            android:id="@+id/key_pad_one"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/button_color_primary_stroke"
            android:textColor="@android:color/white"
            android:text="1"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:typeface="SourceSansPro-Regular.otf"/>

        <io.steemapp.steemy.views.SteemyButton
            android:id="@+id/key_pad_two"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/button_color_primary_stroke"
            android:textColor="@android:color/white"
            android:text="2"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:typeface="SourceSansPro-Regular.otf"/>

        <io.steemapp.steemy.views.SteemyButton
            android:id="@+id/key_pad_three"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/button_color_primary_stroke"
            android:textColor="@android:color/white"
            android:text="3"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:typeface="SourceSansPro-Regular.otf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <io.steemapp.steemy.views.SteemyButton
            android:id="@+id/key_pad_decimal"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/button_color_primary_stroke"
            android:textColor="@android:color/white"
            android:text="."
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:typeface="SourceSansPro-Regular.otf"/>

        <io.steemapp.steemy.views.SteemyButton
            android:id="@+id/key_pad_zero"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/button_color_primary_stroke"
            android:textColor="@android:color/white"
            android:text="0"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:typeface="SourceSansPro-Regular.otf"/>

        <io.steemapp.steemy.views.SteemyButton
            android:id="@+id/key_pad_back"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/button_color_primary_stroke"
            android:textColor="@android:color/white"
            android:text="&#60;"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            app:typeface="SourceSansPro-Regular.otf"/>

    </LinearLayout>

</LinearLayout>